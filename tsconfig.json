{
  "compilerOptions": {
  "module": "Node16",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2019",
    "sourceMap": true,
  "outDir": "./dist",
  "rootDir": "./src",
    "baseUrl": "./",
    "incremental": true,
    "strict": true,
    "skipLibCheck": true,
  "moduleResolution": "node16",
  "esModuleInterop": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "test", "**/*spec.ts"]
}
